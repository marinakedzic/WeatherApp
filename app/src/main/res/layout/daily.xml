<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:background="@color/boxcolor">

    <!-- Daily Weather icon -->
    <ImageView
        android:id="@+id/dailyIcon"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_gravity="center_vertical"
        android:layout_margin="15dp"
        android:src="@drawable/rain"/>

    <!-- Daily Temperature -->
    <TextView
        android:id="@+id/tempDaily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/letters"
        android:textSize="28sp"
        android:text="0">
    </TextView>

    <!-- Daily Weather Data -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:padding="15dp">

        <!-- Date -->
        <TextView
            android:id="@+id/timeDaily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/letters"
            android:textSize="24sp"
            android:text="Date">
        </TextView>

        <!-- Wind -->
        <TextView
            android:id="@+id/windDaily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/letters"
            android:textSize="18sp"
            android:text="Wind">
        </TextView>

        <!-- Rain -->
        <TextView
            android:id="@+id/rainDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/letters"
            android:textSize="18sp"
            android:text="Rain description">

        </TextView>
    </LinearLayout>

</LinearLayout>